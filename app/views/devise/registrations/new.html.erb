<h2 class="font-weight-bold devise-title mb-4">Criar conta</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, label: false,
                input_html: { autocomplete: "email", class: "custom-input", placeholder: "E-mail" }%>
    <%= f.input :username, required: true, label: false,
                input_html: { placeholder: "Usuário", class: "custom-input username" } %>
    <%= f.input :password, required: true, label: false,
                hint: ("(mínimo de #{@minimum_password_length} caracteres)" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: "custom-input", placeholder: "Senha" } %>
    <%= f.input :password_confirmation, required: true, label: false,
                input_html: { autocomplete: "new-password", class: "custom-input", placeholder: "Confirmação da senha" } %>
  </div>

  <div class="form-actions mt-4 mb-2">
    <%= f.button :submit, "Cadastrar", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<span class="t-50">Já possui conta? <%= link_to new_session_path(resource_name), class:"font-weight-bold devise-links" do %>
  Entrar <i class="fas fa-chevron-right icon" style="bottom: 29px;"></i><% end %>
</span>
