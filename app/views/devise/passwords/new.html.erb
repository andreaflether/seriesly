<h2 class="mb-4 devise-title font-weight-bold">Recuperar senha</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, label: false, autofocus: true,
                input_html: { autocomplete: "email", class: "custom-input" } %>
  </div>
  <p class="password-instructions t-50 mt-2 mb-3">Você receberá um e-mail com instruções para recuperar sua senha.</p>

  <div class="form-actions">
    <%= f.button :submit, "Enviar instruções", class: "btn btn-primary btn-block mb-3" %>
  </div>
<% end %>

<span class="t-50">Já possui conta? <%= link_to "Entrar", new_session_path(resource_name), class:"font-weight-bold" %></span>
<div class="col-12 my-2">
  <div class="row no-gutters justify-content-center align-items-center options-div">
    <div class="col-5">&nbsp;</div>
    <div class="col-1 text-uppercase inside-text""><small>ou</small></div>
    <div class="col-5">&nbsp</div>
  </div>
</div>
<span class="t-50">Novo por aqui? <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "font-weight-bold" %></span>
