<h2 class="mb-4 devise-title"><b>Login</b></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: true, label: false,
                        input_html: { autocomplete: "email", class: "custom-input", placeholder: "UsuÃ¡rio ou e-mail" } %>
    <%= f.input :password, required: true, label: false,
                          input_html: { autocomplete: "current-password", class: "custom-input", placeholder: "Senha" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Entrar", class: "btn btn-primary btn-block py-2 px-3 mt-4" %>
  </div>
<% end %>

<span class="t-50 mt-2">Novo por aqui? <%= link_to new_registration_path(resource_name), class: "font-weight-bold devise-links" do %>
  Cadastre-se <i class="fas fa-chevron-right icon" style="bottom: 86px;"></i>
<% end %>
</span>
<div class="col-12 my-2">
  <div class="row no-gutters justify-content-center align-items-center options-div">
    <div class="col-5">&nbsp;</div>
    <div class="col-1 text-uppercase inside-text""><small>ou</small></div>
    <div class="col-5">&nbsp</div>
  </div>
</div>
